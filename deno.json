		"@std/fs": "jsr:@std/fs@^1.0.14",
		"@std/html": "jsr:@std/html@^1.0.4",
		"@std/path": "jsr:@std/path@^1.0.8",
		"cheerio": "npm:cheerio@^1.1.0",
		"xml2js": "npm:xml2js@^0.6.2"
	}
